<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculadora__NetMaui_.MainPage">
    <VerticalStackLayout Padding="20">
        <Entry x:Name="num1Entry" Placeholder="Número 1" Keyboard="Numeric" />
        <Entry x:Name="num2Entry" Placeholder="Número 2" Keyboard="Numeric" />
        <Button Text="Suma" Clicked="OnSumaClicked" Margin="0,10,0,0" />
        <Button Text="Resta" Clicked="OnRestaClicked" Margin="0,10,0,0" />
        <Button Text="Multiplicación" Clicked="OnMultiplicacionClicked" Margin="0,10,0,0" />
        <Button Text="División" Clicked="OnDivisionClicked" Margin="0,10,0,0" />
    </VerticalStackLayout>
</ContentPage>